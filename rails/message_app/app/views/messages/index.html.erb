<div class="messages">
  <div class="container">
    <% @messages.each do |message| %>
    <div class="message">
      <p class="content">
        <%= link_to message.content, message_path(message) %>
      </p>
      <p class="time"><%= message.created_at %></p>
      <p><%= message.user_id %></p>
      <%= link_to "Update", edit_message_path(message) %>
      <%= link_to "Delete", message,method: :delete,data:{confirm:"Are you sure?"} %>
    </div>
    <% end %>
  </div>
</div>
<%= link_to 'New Message', "messages/new" %>
