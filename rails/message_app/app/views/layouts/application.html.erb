<!DOCTYPE html>
<html>
  <head>
    <title>Railsbook1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header">
      <div class="container">
        <%= link_to image_tag('http://s3.amazonaws.com/codecademy-content/courses/learn-rails/img/logo-1m.svg'),root_path %>
        <h1>Messenger</h1>
      </div>
    </div>
    <div class="container">
      <div>
        <% if user_signed_in? %>
        <%= link_to "Sign Out", sessions_path,method: :delete %>
      <% else %>
        <%= link_to "Sign Up", new_user_path%>
        <%= link_to "Sign In", new_session_path %>
        <% end %>
      </div>
      <%= yield %>
      <div>
        <%= current_user.inspect %>
      </div>
    </div>
  </body>
</html>
